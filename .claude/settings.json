{
  "permissions": {
    "allow": [
      "Read(./)",
      "Write(./)",
      "Edit(./)"
    ]
  },
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "/Users/konradentner/code/file-lock-coordinator/hooks/ensure-coordinator.sh"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "/Users/konradentner/code/file-lock-coordinator/hooks/request-lock.sh --wait --timeout 60"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "/Users/konradentner/code/file-lock-coordinator/hooks/release-lock.sh"
          }
        ]
      }
    ]
  }
}
